PORT=3003
NODE_ENV=development

# =============================================
# Database Configuration
# =============================================

# Local Development (TCP/IP connection)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ms3_database

# =============================================
# Cloud SQL Configuration (for GCP deployment)
# =============================================

# Option 1: Unix Socket (Recommended for Cloud Run)
# INSTANCE_CONNECTION_NAME=PROJECT_ID:REGION:INSTANCE_NAME
# DB_SOCKET_PATH=/cloudsql
# DB_USER=your_cloud_sql_user
# DB_PASSWORD=your_cloud_sql_password
# DB_NAME=ms3_database

# Option 2: Cloud SQL with auto socket path
# INSTANCE_CONNECTION_NAME=PROJECT_ID:REGION:INSTANCE_NAME
# DB_USER=your_cloud_sql_user
# DB_PASSWORD=your_cloud_sql_password
# DB_NAME=ms3_database

# =============================================
# VM MySQL Configuration (for Compute Engine)
# =============================================

# DB_HOST=<vm-internal-ip>
# DB_PORT=3306
# DB_USER=your_mysql_user
# DB_PASSWORD=your_mysql_password
# DB_NAME=ms3_database

# SSL/TLS Certificates (optional for private IP connections)
# DB_ROOT_CERT=/path/to/server-ca.pem
# DB_CERT=/path/to/client-cert.pem
# DB_KEY=/path/to/client-key.pem

# =============================================
# Email Configuration (for future implementation)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================
# SMS Configuration (for future implementation)
# =============================================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

